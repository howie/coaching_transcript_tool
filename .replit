modules = ["python-3.13.5", "bash"]
compile = "make"

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[deployment]
build = ["sh", "-c", "make"]
run = ["sh", "-c", "uvicorn src/coaching_assistant.main:app --host 0.0.0.0 --port 5000 & flask run --host 0.0.0.0 --port 5001"]
deploymentTarget = "cloudrun"

[workflows]
runButton = "Web App"

[[workflows.workflow]]
name = "Web App"
author = 40986870
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 main.py"

[[ports]]
localPort = 5000
externalPort = 80

[env]
REPLIT_DISABLE_PACKAGE_LAYER = "1"
