#!/bin/bash

# Project Root Configuration Checker Wrapper
# Quick access script for configuration checking from project root

set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
PROJECT_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
CONFIG_CHECKER="$PROJECT_ROOT/terraform/scripts/check-config.sh"

# Check if the main script exists
if [[ ! -f "$CONFIG_CHECKER" ]]; then
    echo "‚ùå Configuration checker not found at: $CONFIG_CHECKER"
    exit 1
fi

# Pass all arguments to the main configuration checker
exec "$CONFIG_CHECKER" "$@"