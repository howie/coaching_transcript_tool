# =============================================================================
# Terraform Infrastructure as Code - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real credentials to version control

# =============================================================================
# CLOUDFLARE CONFIGURATION
# =============================================================================

# Cloudflare Authentication (choose ONE method)
# Method 1: API Token (Recommended)
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here

# Method 2: Email + API Key (Legacy)
# CLOUDFLARE_EMAIL=your_email@example.com
# CLOUDFLARE_API_KEY=your_cloudflare_api_key_here

# Cloudflare Account Information
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_ZONE_ID=your_zone_id_for_domain

# Domain Configuration
TF_VAR_domain=doxa.com.tw
TF_VAR_frontend_subdomain=coachly
TF_VAR_api_subdomain=api

# GitHub Repository
TF_VAR_github_owner=your_github_username
TF_VAR_github_repo=coaching_transcript_tool

# Security Keys
TF_VAR_recaptcha_site_key=your_recaptcha_site_key_production
TF_VAR_recaptcha_site_key_staging=your_recaptcha_site_key_staging
TF_VAR_google_client_id=your_google_oauth_client_id

# Optional Analytics
TF_VAR_web_analytics_tag=your_cloudflare_analytics_tag
TF_VAR_web_analytics_token=your_cloudflare_analytics_token

# =============================================================================
# RENDER.COM CONFIGURATION
# =============================================================================

# Render Authentication
RENDER_API_KEY=your_render_api_key_here

# Project Configuration
TF_VAR_project_name=coaching-assistant
TF_VAR_environment=production
TF_VAR_region=oregon
TF_VAR_github_repo_url=https://github.com/your_username/coaching_transcript_tool
TF_VAR_branch=main

# Service Plans
TF_VAR_api_plan=standard
TF_VAR_worker_plan=standard
TF_VAR_database_plan=standard
TF_VAR_redis_plan=standard

# Auto-scaling Configuration
TF_VAR_enable_auto_scaling=true
TF_VAR_min_instances=1
TF_VAR_max_instances=5
TF_VAR_target_cpu_percent=70
TF_VAR_target_memory_percent=80

# Worker Configuration
TF_VAR_enable_worker_auto_scaling=true
TF_VAR_worker_min_instances=1
TF_VAR_worker_max_instances=3
TF_VAR_worker_concurrency=4
TF_VAR_task_time_limit=3600

# =============================================================================
# APPLICATION SECRETS
# =============================================================================

# API Configuration
TF_VAR_api_secret_key=your_super_secret_api_key_here
TF_VAR_jwt_algorithm=HS256
TF_VAR_access_token_expire_minutes=30
TF_VAR_refresh_token_expire_days=7

# Google OAuth
TF_VAR_google_client_secret=your_google_oauth_client_secret

# reCAPTCHA
TF_VAR_recaptcha_enabled=true
TF_VAR_recaptcha_secret=your_recaptcha_secret_key
TF_VAR_recaptcha_min_score=0.5

# Error Monitoring
TF_VAR_sentry_dsn=your_sentry_dsn_url

# =============================================================================
# GOOGLE CLOUD PLATFORM
# =============================================================================

# GCP Project
TF_VAR_gcp_project_id=your_gcp_project_id

# Service Account (JSON format - escape quotes)
TF_VAR_gcp_service_account_json={"type":"service_account","project_id":"your_project",...}

# Storage Buckets
TF_VAR_audio_storage_bucket=coaching-assistant-audio-prod
TF_VAR_transcript_storage_bucket=coaching-assistant-transcripts-prod

# Speech-to-Text Configuration
TF_VAR_stt_provider=google
TF_VAR_google_stt_model=chirp_2
TF_VAR_google_stt_location=asia-southeast1

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# AssemblyAI
TF_VAR_assemblyai_api_key=your_assemblyai_api_key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# File Upload Limits (MB)
TF_VAR_max_file_size=500
TF_VAR_max_audio_duration=7200

# CORS Configuration
TF_VAR_allowed_origins=["https://coachly.doxa.com.tw","http://localhost:3000"]

# Retention Policy
TF_VAR_retention_days=1
TF_VAR_signed_url_expiry=60

# Logging
TF_VAR_log_level=INFO
TF_VAR_log_format=json

# Feature Flags
TF_VAR_enable_speaker_diarization=true
TF_VAR_enable_punctuation=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL
TF_VAR_database_name=coaching_assistant
TF_VAR_database_user=coaching_user
TF_VAR_postgres_version=15

# Backup Configuration
TF_VAR_backup_retention_days=7
TF_VAR_backup_hour=2
TF_VAR_backup_minute=0

# High Availability (Production)
TF_VAR_enable_read_replica=true
TF_VAR_replica_region=singapore

# Maintenance Window
TF_VAR_maintenance_day=sunday
TF_VAR_maintenance_time=02:00
TF_VAR_maintenance_duration=1h

# Redis Configuration
TF_VAR_redis_backup_retention_days=3

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Monitoring Email
TF_VAR_monitoring_email=admin@doxa.com.tw

# Flower Monitoring (Optional)
TF_VAR_enable_flower_monitoring=false
TF_VAR_flower_auth=admin:your_flower_password

# =============================================================================
# VERSION INFORMATION
# =============================================================================

# Application Version (auto-populated by CI/CD)
TF_VAR_app_version=1.0.0
TF_VAR_build_id=auto-generated
TF_VAR_commit_sha=auto-generated

# =============================================================================
# TERRAFORM STATE CONFIGURATION
# =============================================================================

# Remote State Backend (Optional - for team collaboration)
TF_BACKEND_BUCKET=coaching-assistant-terraform-state
TF_BACKEND_PREFIX=infrastructure/state
TF_BACKEND_REGION=asia-southeast1

# =============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# =============================================================================

# Development Environment
# TF_VAR_environment=development
# TF_VAR_api_plan=starter
# TF_VAR_worker_plan=starter
# TF_VAR_database_plan=starter
# TF_VAR_redis_plan=starter
# TF_VAR_max_file_size=50
# TF_VAR_recaptcha_enabled=false

# Staging Environment
# TF_VAR_environment=staging
# TF_VAR_api_plan=standard
# TF_VAR_worker_plan=standard
# TF_VAR_database_plan=standard
# TF_VAR_redis_plan=standard
# TF_VAR_max_file_size=200

# =============================================================================
# NOTES
# =============================================================================

# 1. API Tokens and Keys:
#    - Cloudflare: https://dash.cloudflare.com/profile/api-tokens
#    - Render: https://dashboard.render.com/account/api-keys
#    - Google Cloud: https://console.cloud.google.com/iam-admin/serviceaccounts
#    - AssemblyAI: https://www.assemblyai.com/dashboard/signup

# 2. Zone and Account IDs:
#    - Cloudflare Zone ID: Found in domain overview (right sidebar)
#    - Cloudflare Account ID: Found in any Cloudflare page (right sidebar)

# 3. Service Account JSON:
#    - Download from GCP Console and format as single line
#    - Escape all quotes: "key": "value" becomes \"key\": \"value\"

# 4. Security Best Practices:
#    - Use different keys for each environment
#    - Rotate secrets regularly
#    - Never commit .env files to version control
#    - Use Terraform Cloud/Enterprise for sensitive variables in CI/CD

# 5. CORS Origins:
#    - Include all domains that will access your API
#    - Use https:// for production domains
#    - Include localhost for development

# 6. File Paths:
#    - All paths should be relative to repository root
#    - Dockerfile paths are relative to root_directory setting