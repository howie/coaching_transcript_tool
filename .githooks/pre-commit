#!/bin/bash
# Pre-commit hook to check version consistency

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Checking version consistency...${NC}"

# Check if version.json exists
if [ ! -f "version.json" ]; then
    echo -e "${RED}‚úó version.json not found${NC}"
    exit 1
fi

# Run version consistency check
if python3 scripts/sync-version.py --check > /dev/null 2>&1; then
    echo -e "${GREEN}‚úì Version files are consistent${NC}"
else
    echo -e "${RED}‚úó Version files are inconsistent!${NC}"
    echo ""
    python3 scripts/sync-version.py --check
    echo ""
    echo -e "${YELLOW}Please run 'make version-sync' to synchronize versions${NC}"
    echo -e "${YELLOW}Or run 'git commit --no-verify' to skip this check${NC}"
    exit 1
fi

# If version.json is being modified, remind to update release notes
if git diff --cached --name-only | grep -q "version.json"; then
    echo -e "${YELLOW}üìù version.json is being modified${NC}"
    echo -e "${YELLOW}   Don't forget to:${NC}"
    echo -e "${YELLOW}   - Update releaseNotes in version.json${NC}"
    echo -e "${YELLOW}   - Update CHANGELOG.md${NC}"
fi

exit 0