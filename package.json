{
  "name": "coaching-transcript-tool",
  "private": true,
  "version": "2.0.0",
  "description": "專業的教練對話逐字稿處理工具 - 前後端分離架構",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:frontend": "npm run build --prefix apps/web",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "deploy:cf-worker": "npm run build:frontend && npx wrangler deploy -c wrangler.frontend.toml"
  },
  "devDependencies": {
    "turbo": "^1.10.0",
    "@changesets/cli": "^2.26.0"
  },
  "packageManager": "npm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
